{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "declaration": true, // 生成类型声明
    "declarationDir": "./types",
    "moduleResolution": "node",
    "baseUrl": "./",
  },
  "include": ["src", "core"]
}
